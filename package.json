  "scripts": {
    "test": "react-scripts test",
    "build-css": "lessc --source-map --clean-css='--advanced --compatibility=ie8' src/stylesheets/app.less public/stylesheets/app.min.css",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "start-css": "watch-run -p 'src/stylesheets/**/*.less' npm run build-css",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p start-css start-js",
    "predeploy": "npm run build",
    "deploy": "node ./scripts/publish.js master"
  },
  "engines": {
    "node": "6.x || 7.x || 8.x"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "color": "~3.1.0",
    "flux": "^3.1.3",
    "lodash": "~4.17.11",
    "prop-types": "^15.6.2",
    "react": "~16.6.3",
    "react-dom": "~16.6.3",
    "rest": "^2.0.0",
    "uikit": "~3.0.0-rc.25"
  },
  "devDependencies": {
    "gh-pages": "^1.2.0",
    "less": "~3.9.0",
    "less-plugin-clean-css": "^1.5.1",
    "npm-run-all": "~4.1.5",
    "react-scripts": "^2.1.1",
    "watch-run": "^1.2.5"
